@model SmartAdmin.WebUI.ViewModels.CategoryViewModel
<div class="row">
    <div class="col-xl-6">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Create <span class="fw-300"><i>Category</i></span>
                </h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                    <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="panel-tag">
                       create category
                    </div>
                    <form id="form-cat" asp-action="Create" method="post" data-ajax-begin="onBegin"  data-ajax="true" data-ajax-method="post" data-ajax-complete="onCreateComleted" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CategoryName" class="control-label"></label>
                            <input asp-for="CategoryName" class="form-control" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryDesc" class="control-label"></label>
                            <input asp-for="CategoryDesc" class="form-control" />
                            <span asp-validation-for="CategoryDesc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CatImage" class="control-label"></label>

                            <div class="custom-file">
                                <input type="file" asp-for="file" class="custom-file-input" />
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                            <span asp-validation-for="CatImage" class="text-danger"></span>
                        </div>
                        <div class="form-group" hidden>
                            <label asp-for="ParentId" class="control-label"></label>
                            <input asp-for="ParentId" class="form-control" value="0" />
                            <span asp-validation-for="ParentId" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="CategoryKeyword" class="control-label"></label>
                            <input asp-for="CategoryKeyword" class="form-control" />
                            <span asp-validation-for="CategoryKeyword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CatSeq" class="control-label"></label>
                            <input asp-for="CatSeq" class="form-control" />
                            <span asp-validation-for="CatSeq" class="text-danger"></span>
                        </div>
                        <div class="custom-control custom-checkbox">
                            <input  asp-for="IsActive" type="checkbox" class="custom-control-input" id="defaultChecked" checked="">
                            <label class="custom-control-label" for="defaultChecked">IsActive</label>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success">Create</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
